#include "test_data.h"
#include "test_util.h"

#ifdef __cplusplus
extern "C" {
void mobilenet_v2(const float* in, float* out);
}
#else
void mobilenet_v2(const float* in, float* out);
#endif

#ifndef COMPARE_ERROR
#define COMPARE_ERROR 1e-3
#endif

int main(int argc, char** argv) {
  float out[3];
  float* input = test_input;
#ifdef USE_NHWC_INPUT
  float test_input_nhwc[sizeof(test_input)/sizeof(test_input[0])];
      for (int s = 0, se = 224 * 224; s < se; ++s)
        for (int c = 0; c < 3; ++c)
          test_input_nhwc[s * 3 + c] = test_input[c * se + s];
  input = test_input_nhwc;
#endif
  mobilenet_v2(input, out);
  if (Verify(out, test_output_ref, sizeof(out) / sizeof(out[0]), COMPARE_ERROR)) {
    printf("Result verified\n");
  } else {
    printf(" Failed\n");
    return 1;
  }
#ifdef TIMING_TEST
#ifdef ITER_TEST
  const int iter = ITER_TEST;
#else
  const int iter = 1;
#endif
  timestamp_t begin_time = Now();
  for (int i = 0; i < iter; ++i) {
    mobilenet_v2(input, out);
    #ifdef VERIFY_ALL_ITERS
    if (!Verify(out, test_output_ref, sizeof(out) / sizeof(out[0]), COMPARE_ERROR)) {
      printf(" Failed on iteration %d\n", i);
    }
    #endif
  }
  timestamp_t end_time = Now();
  printf("Elapse time: %lf seconds (avg of %d iters)\n", GetDuration(begin_time, end_time) / iter, iter);
#endif
  return 0;
}